<% include _header %>

<h1>Registro Equipo </h1>

<form action="/equip" method="POST">
    <div class="form-group">
        <input name="description" type="text" class="form-control"
        placeholder="Descripcion del equipo" required autofocus>
        </div>
        <div class="form-group">
            <input name="defense" type="int" class="form-control"
            placeholder="Cantidad de defensa" required>
        </div>
        <div class="form-group">
        <input name="category" type="text" class="form-control"
        placeholder="Categoria del zombirer" autofocus>
        </div>
        <div class="form-group">
        <input name="weight" type="int" class="form-control"
        placeholder="Peso del equipo" autofocus>
        </div>
        <input type="submit" value="Registrarse" class="btn btn-primary btn-block">
</form>

<% include _footer %>